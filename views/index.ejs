<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Quick Count Overlay (Mini)</title>
  <meta http-equiv="refresh" content="60" />
  <style>
    :root {
      --font: "Poppins", "Inter", sans-serif;
      --blur: 10px;
    }

    body {
      margin: 0;
      font-family: var(--font);
      background: transparent;
      color: #fff;
      overflow: hidden;
    }

    /* === Overlay Container === */
    .footer-overlay {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      flex-direction: column;
      align-items: center;
      background: rgba(10, 10, 10, 0.4);
      backdrop-filter: blur(var(--blur));
      border-radius: 12px;
      padding: 8px 20px 12px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.35);
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translate(-50%, 10px);
      }

      to {
        opacity: 1;
        transform: translate(-50%, 0);
      }
    }

    /* === Candidate Row === */
    .candidate-row {
      display: flex;
      justify-content: center;
      align-items: stretch;
      gap: 16px;
      width: 100%;
    }

    .candidate {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 6px 10px;
      border-radius: 10px;
      font-size: 12px;
      min-width: 80px;
      transition: all 0.3s ease;
    }

    .candidate img {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border: 1px solid #fff;
      object-fit: cover;
      margin-bottom: 3px;
    }

    .candidate-name {
      font-weight: 600;
      font-size: 12px;
      margin-bottom: 2px;
    }

    .candidate-percent {
      font-weight: 700;
      font-size: 14px;
    }

    /* === Warna Kandidat === */
    .c1 {
      background: linear-gradient(160deg, rgba(255, 70, 70, 0.85), rgba(180, 20, 20, 0.6));
    }

    .c2 {
      background: linear-gradient(160deg, rgba(70, 130, 255, 0.85), rgba(20, 80, 200, 0.6));
    }

    .c3 {
      background: linear-gradient(160deg, rgba(255, 220, 80, 0.9), rgba(210, 180, 30, 0.6));
      color: #222;
    }

    /* === Data Progress === */
    .data-progress {
      width: 100%;
      text-align: center;
      margin-top: 6px;
    }

    .progress-bar {
      width: 100%;
      height: 6px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 5px;
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #00ffcc, #008cff);
      width: 0%;
      border-radius: 5px;
      transition: width 0.8s ease;
    }

    .progress-text {
      margin-top: 3px;
      font-size: 11px;
      opacity: 0.9;
    }
  </style>
</head>

<body>
  <% const totalMax=1538; let pct=(totalMax> 0) ? (totalVotes / totalMax) * 100 : 0;
    pct = Math.min(100, Math.max(0, pct));
    const pctDisplay = pct.toFixed(1);
    %>

    <div class="footer-overlay">
      <div class="candidate-row">
        <% candidates.forEach((c, i)=> { %>
          <div class="candidate c<%= i + 1 %>">
            <% if (c.photo) { %>
              <img src="<%= c.photo %>" alt="<%= c.name %>">
              <% } %>
                <div class="candidate-name">
                  <%= c.name %>
                </div>
                <div class="candidate-percent">
                  <%= totalVotes ? ((c.votes / totalVotes) * 100).toFixed(1) : 0 %>%
                </div>
          </div>
          <% }) %>
      </div>

      <!-- Progress Section -->
      <div class="data-progress">
        <div class="progress-bar">
          <div class="progress-fill" data-width="<%= pctDisplay %>"></div>
        </div>
        <div class="progress-text">
          <%= pctDisplay %>% dari <%= totalMax %> suara (<%= totalVotes %> masuk)
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const fill = document.querySelector(".progress-fill");
        if (fill) fill.style.width = fill.dataset.width + "%";
      });
    </script>
</body>

</html>