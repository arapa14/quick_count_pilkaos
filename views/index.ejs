<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8" />
  <title>Quick Count Overlay</title>
  <meta http-equiv="refresh" content="60" />
  <style>
    :root {
      --font: "Poppins", "Inter", sans-serif;
      --bg-dark: rgba(10, 10, 10, 0.55);
      --blur: 12px;
      --accent: #00ffd5;
    }

    body {
      margin: 0;
      font-family: var(--font);
      background: transparent;
      color: #fff;
      overflow: hidden;
    }

    /* === Footer Overlay === */
    .footer-overlay {
      position: fixed;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 100%;
      max-width: 1600px;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: var(--bg-dark);
      backdrop-filter: blur(var(--blur));
      border-top: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 -3px 30px rgba(0, 0, 0, 0.45);
      padding: 32px 48px 48px;
      animation: fadeIn 0.8s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translate(-50%, 40px);
      }

      to {
        opacity: 1;
        transform: translate(-50%, 0);
      }
    }

    /* === Candidate Row === */
    .candidate-row {
      display: flex;
      justify-content: center;
      align-items: stretch;
      flex-wrap: nowrap;
      gap: 36px;
      width: 100%;
      max-width: 1400px;
      transition: all 0.4s ease;
    }

    .candidate {
      flex: 1;
      min-width: 240px;
      max-width: 400px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
      border-radius: 22px;
      padding: 24px 32px;
      color: #fff;
      background: rgba(255, 255, 255, 0.07);
      box-shadow: inset 0 0 25px rgba(255, 255, 255, 0.05),
        0 6px 18px rgba(0, 0, 0, 0.35);
      transition: all 0.4s ease;
    }

    .candidate:hover {
      transform: translateY(-6px);
      background: rgba(255, 255, 255, 0.12);
    }

    .candidate img {
      width: 88px;
      height: 88px;
      border-radius: 50%;
      border: 2px solid rgba(255, 255, 255, 0.9);
      object-fit: cover;
      margin-bottom: 12px;
    }

    .candidate-name {
      font-weight: 600;
      font-size: 20px;
      margin-bottom: 6px;
      letter-spacing: 0.3px;
    }

    .candidate-percent {
      font-size: 26px;
      font-weight: 700;
      letter-spacing: 0.6px;
    }

    /* === Warna Kandidat === */
    .c1 {
      background: linear-gradient(160deg, rgba(255, 70, 70, 0.85), rgba(180, 20, 20, 0.6));
    }

    .c2 {
      background: linear-gradient(160deg, rgba(70, 130, 255, 0.85), rgba(20, 80, 200, 0.6));
    }

    .c3 {
      background: linear-gradient(160deg, rgba(255, 220, 80, 0.9), rgba(210, 180, 30, 0.6));
      color: #222;
    }

    /* === Data Progress === */
    .data-progress {
      width: 100%;
      max-width: 700px;
      text-align: center;
      margin-top: 28px;
      animation: fadeIn 1.2s ease;
    }

    .progress-label {
      font-size: 18px;
      font-weight: 500;
      margin-bottom: 10px;
      opacity: 0.9;
    }

    .progress-bar {
      width: 100%;
      height: 16px;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 12px;
      overflow: hidden;
      position: relative;
    }

    .progress-fill {
      height: 100%;
      border-radius: 12px;
      background: linear-gradient(90deg, var(--accent), #008cff);
      transform-origin: left center;
      scale: 0;
      animation: grow 1s ease forwards;
    }

    @keyframes grow {
      from {
        scale: 0;
      }

      to {
        scale: 1;
      }
    }

    .progress-text {
      margin-top: 6px;
      font-size: 16px;
      opacity: 0.85;
    }

    /* === Responsive === */
    @media (max-width: 1300px) {
      .candidate-row {
        flex-wrap: wrap;
        justify-content: center;
      }

      .candidate {
        flex-basis: 45%;
      }
    }

    @media (max-width: 768px) {
      .candidate img {
        width: 64px;
        height: 64px;
      }

      .candidate-name {
        font-size: 16px;
      }

      .candidate-percent {
        font-size: 20px;
      }

      .progress-label {
        font-size: 16px;
      }
    }
  </style>
</head>

<body>
  <% const totalMax=1538; let pct=(totalMax> 0) ? (totalVotes / totalMax) * 100 : 0;
    pct = Math.min(100, Math.max(0, pct)); // Clamp 0â€“100
    const pctDisplay = pct.toFixed(1);
    %>

    <div class="footer-overlay">
      <div class="candidate-row">
        <% candidates.forEach((c, i)=> { %>
          <div class="candidate c<%= i + 1 %>">
            <% if (c.photo) { %>
              <img src="<%= c.photo %>" alt="<%= c.name %>">
              <% } %>
                <div class="candidate-name">
                  <%= c.name %>
                </div>
                <div class="candidate-percent">
                  <%= totalVotes ? ((c.votes / totalVotes) * 100).toFixed(1) : 0 %>%
                </div>
          </div>
          <% }) %>
      </div>

      <!-- Data Masuk Section -->
      <div class="data-progress">
        <div class="progress-label">ðŸ“Š Data Masuk</div>
        <div class="progress-bar">
          <div class="progress-fill" data-width="<%= pctDisplay %>"></div>
        </div>
        <div class="progress-text">
          <%= pctDisplay %>% dari total suara
        </div>
      </div>
    </div>

    <script>
      // Alternatif bebas error: apply width via JS, bukan inline EJS
      document.addEventListener("DOMContentLoaded", () => {
        const fill = document.querySelector(".progress-fill");
        if (fill) {
          const width = fill.dataset.width;
          fill.style.width = width + "%";
        }
      });
    </script>
</body>

</html>