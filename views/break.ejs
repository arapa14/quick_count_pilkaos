<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <title>Quick Count Overlay - ISHOMA Fullscreen</title>
    <meta http-equiv="refresh" content="60">
    <style>
        :root {
            --font: "Poppins", "Inter", sans-serif;
            --blur: 12px;
        }

        html,
        body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: var(--font);
            background: rgba(0, 0, 0, 0.85);
            color: #fff;
            overflow: hidden;
        }

        /* === Container full screen === */
        .overlay-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            height: 100%;
            padding: 40px;
            box-sizing: border-box;
        }

        .ishoma-title {
            font-weight: 700;
            font-size: 48px;
            margin-bottom: 40px;
            text-align: center;
            color: #ffd700;
            text-shadow: 0 0 8px rgba(0, 0, 0, 0.6);
        }

        /* === Candidate Row === */
        .candidate-row {
            display: flex;
            gap: 30px;
            justify-content: center;
            align-items: center;
            flex-wrap: nowrap;
            margin-bottom: 40px;
        }

        .candidate {
            display: flex;
            align-items: center;
            gap: 16px;
            border-radius: 16px;
            padding: 20px 28px;
            font-size: 20px;
            min-width: 200px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.5);
        }

        .candidate img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 2px solid #fff;
            object-fit: cover;
        }

        .candidate-info {
            display: flex;
            flex-direction: column;
            line-height: 1.3;
            justify-content: center;
        }

        .candidate-name {
            font-weight: 700;
            font-size: 24px;
            margin-bottom: 6px;
        }

        .candidate-percent {
            font-weight: 700;
            font-size: 28px;
        }

        /* === Warna Kandidat === */
        .c2 {
            background: linear-gradient(160deg, rgba(255, 70, 70, 0.85), rgba(180, 20, 20, 0.6));
            color: #fff;
        }

        .c3 {
            background: linear-gradient(160deg, rgba(70, 130, 255, 0.85), rgba(20, 80, 200, 0.6));
            color: #fff;
        }

        .c4 {
            background: linear-gradient(160deg, rgba(255, 220, 80, 0.9), rgba(210, 180, 30, 0.6));
            color: #222;
        }

        /* === Data Progress === */
        .data-progress {
            width: 70%;
            max-width: 1200px;
            text-align: center;
        }

        .progress-bar {
            width: 100%;
            height: 20px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 12px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #00ffcc, #008cff);
            width: 0%;
            border-radius: 10px;
            transition: width 1s ease;
        }

        .progress-text {
            font-size: 22px;
            font-weight: 600;
        }

        /* === Responsive === */
        @media (max-width: 1200px) {
            .candidate-row {
                flex-wrap: wrap;
            }

            .candidate {
                min-width: 180px;
                padding: 16px 20px;
                font-size: 18px;
            }

            .candidate-name {
                font-size: 20px;
            }

            .candidate-percent {
                font-size: 24px;
            }

            .ishoma-title {
                font-size: 36px;
                margin-bottom: 30px;
            }

            .progress-text {
                font-size: 18px;
            }
        }

        @media (max-width: 768px) {
            .candidate img {
                width: 60px;
                height: 60px;
            }

            .candidate-name {
                font-size: 16px;
            }

            .candidate-percent {
                font-size: 20px;
            }

            .ishoma-title {
                font-size: 28px;
            }

            .progress-text {
                font-size: 16px;
            }
        }
    </style>
</head>

<body>
    <% const totalMax=1538; let pct=(totalMax> 0) ? (totalVotes / totalMax) * 100 : 0;
        pct = Math.min(100, Math.max(0, pct));
        const pctDisplay = pct.toFixed(1);
        %>

        <div class="overlay-container">
            <div class="ishoma-title">Pemilihan Ketua OSIS - Perolehan Sementara</div>

            <div class="candidate-row">
                <% candidates.forEach((c, i)=> { 
                    if (c.id === 0) return;
                    %>
                    <div class="candidate c<%= i + 1 %>">
                        <% if (c.photo) { %>
                            <img src="<%= c.photo %>" alt="<%= c.name %>">
                            <% } %>
                                <div class="candidate-info">
                                    <div class="candidate-name">
                                        <%= c.name %>
                                    </div>
                                    <div class="candidate-percent">
                                        <%= totalVotes ? ((c.votes / totalVotes) * 100).toFixed(1) : 0 %>%
                                    </div>
                                </div>
                    </div>
                    <% }) %>
            </div>

            <div class="data-progress">
                <div class="progress-bar">
                    <div class="progress-fill" data-width="<%= pctDisplay %>"></div>
                </div>
                <div class="progress-text">
                    <%= pctDisplay %>% dari Total Suara
                </div>
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const fill = document.querySelector(".progress-fill");
                if (fill) fill.style.width = fill.dataset.width + "%";
            });
        </script>
</body>

</html>